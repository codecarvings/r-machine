{
  "name": "@r-machine/next",
  "version": "1.0.0-alpha.3",
  "description": "Official Next.js bindings for R-Machine - A TypeScript library for internationalization (i18n) with a focus on developer experience",
  "author": "Sergio Turolla <hello@codecarvings.com>",
  "license": "MIT",
  "type": "module",
  "homepage": "https://r-machine.codecarvings.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codecarvings/r-machine.git"
  },
  "bugs": "https://github.com/codecarvings/r-machine/issues",
  "keywords": [
    "i18n",
    "i10n",
    "internationalization",
    "localization",
    "globalization",
    "translation",
    "translate",
    "locale",
    "next",
    "next.js",
    "nextjs",
    "typescript",
    "library"
  ],
  "sideEffects": false,
  "files": [
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs",
    "**/*.d.ts",
    "**/*.d.mts",
    "**/*.d.cts"
  ],
  "main": "./lib/index.cjs",
  "types": "./lib/index.d.cts",
  "module": "./lib/index.js",
  "zshy": {
    "exports": {
      "./core": "./src/core/index.ts",
      "./core/app-router": "./src/core/app-router/index.ts",
      "./app-router": "./src/app-router/index.ts",
      ".": "./src/lib/index.ts"
    },
    "conditions": {
      "@r-machine/source": "src"
    }
  },
  "exports": {
    "./core": {
      "@r-machine/source": "./src/core/index.ts",
      "types": "./core/index.d.cts",
      "import": "./core/index.js",
      "require": "./core/index.cjs"
    },
    "./core/app-router": {
      "@r-machine/source": "./src/core/app-router/index.ts",
      "types": "./core/app-router/index.d.cts",
      "import": "./core/app-router/index.js",
      "require": "./core/app-router/index.cjs"
    },
    "./app-router": {
      "@r-machine/source": "./src/app-router/index.ts",
      "types": "./app-router/index.d.cts",
      "import": "./app-router/index.js",
      "require": "./app-router/index.cjs"
    },
    ".": {
      "@r-machine/source": "./src/lib/index.ts",
      "types": "./lib/index.d.cts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "imports": {
    "#r-machine/next/core": {
      "@r-machine/source": "./src/core/index.ts",
      "default": "./core/index.js"
    },
    "#r-machine/next/core/app-router": {
      "@r-machine/source": "./src/core/app-router/index.ts",
      "default": "./core/app-router/index.js"
    },
    "#r-machine/next/app-router": {
      "@r-machine/source": "./src/app-router/index.ts",
      "default": "./app-router/index.js"
    },
    "#r-machine/next": {
      "@r-machine/source": "./src/lib/index.ts",
      "default": "./lib/index.js"
    }
  },
  "scripts": {
    "clean": "git clean -xdf . -e node_modules",
    "build": "zshy --project tsconfig.build.json",
    "postbuild": "pnpm biome check --write .",
    "test": "pnpm vitest run --typecheck",
    "test:watch": "pnpm vitest watch --typecheck"
  },
  "peerDependencies": {
    "next": "^15.0.0 || ^16.0.0",
    "r-machine": "workspace:*",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@r-machine/react": "workspace:*",
    "@types/react": "^19.0.0",
    "next": "^15.0.0",
    "typescript": "5.9.3"
  }
}

{
  "name": "@r-machine/react",
  "version": "1.0.0-alpha.2",
  "description": "Official React bindings for R-Machine - A TypeScript library for internationalization (i18n) with a focus on developer experience",
  "author": "Sergio Turolla <hello@codecarvings.com>",
  "license": "MIT",
  "type": "module",
  "homepage": "https://r-machine.codecarvings.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codecarvings/r-machine.git"
  },
  "bugs": "https://github.com/codecarvings/r-machine/issues",
  "keywords": [
    "i18n",
    "i10n",
    "internationalization",
    "localization",
    "globalization",
    "translation",
    "translate",
    "locale",
    "typescript",
    "library"
  ],
  "sideEffects": false,
  "files": [
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs",
    "**/*.d.ts",
    "**/*.d.mts",
    "**/*.d.cts"
  ],
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "module": "./dist/index.js",
  "zshy": {
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts",
      "./lib": "./src/lib.ts"
    },
    "conditions": {
      "@r-machine/source": "src"
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@r-machine/source": "./src/index.ts",
      "types": "./dist/index.d.cts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./lib": {
      "@r-machine/source": "./src/lib.ts",
      "types": "./dist/lib.d.cts",
      "import": "./dist/lib.js",
      "require": "./dist/lib.cjs"
    }
  },
  "scripts": {
    "clean": "git clean -xdf . -e node_modules",
    "build": "zshy --project tsconfig.build.json",
    "postbuild": "pnpm biome check --write .",
    "test": "pnpm vitest run --typecheck",
    "test:watch": "pnpm vitest watch --typecheck"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "r-machine": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "typescript": "5.9.3"
  }
}

{
  "name": "r-machine",
  "version": "1.0.0-alpha.1",
  "description": "A TypeScript library for internationalization (i18n) with a focus on developer experience",
  "author": "Sergio Turolla <hello@codecarvings.com>",
  "license": "MIT",
  "type": "module",
  "homepage": "https://r-machine.codecarvings.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codecarvings/r-machine.git"
  },
  "bugs": "https://github.com/codecarvings/r-machine/issues",
  "keywords": [
    "i18n",
    "i10n",
    "internationalization",
    "localization",
    "globalization",
    "translation",
    "translate",
    "locale",
    "typescript",
    "library"
  ],
  "sideEffects": false,
  "files": [
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs",
    "**/*.d.ts",
    "**/*.d.mts",
    "**/*.d.cts"
  ],
  "main": "./index.cjs",
  "types": "./index.d.cts",
  "module": "./index.js",
  "zshy": {
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts",
      "./locale": "./src/locale.ts"
    },
    "conditions": {
      "@r-machine/source": "src"
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@r-machine/source": "./src/index.ts",
      "types": "./index.d.cts",
      "import": "./index.js",
      "require": "./index.cjs"
    },
    "./locale": {
      "@r-machine/source": "./src/locale.ts",
      "types": "./locale.d.cts",
      "import": "./locale.js",
      "require": "./locale.cjs"
    }
  },
  "scripts": {
    "clean": "git clean -xdf . -e node_modules",
    "build": "zshy --project tsconfig.build.json",
    "postbuild": "pnpm biome check --write .",
    "test": "pnpm vitest run --typecheck",
    "test:watch": "pnpm vitest watch --typecheck"
  }
}
